          <argument>
            <kind>1</kind>
            <string>if keyboard_check_pressed(vk_enter) {
    var control_index = is_control_in_list(input_slots, keyboard_input);
    if control_index &gt;= 0 {
        // Set as ready
        var gui_id = input_selectors[control_index];
        if !gui_id.is_ready {
            gui_id.is_ready = true;
            global.num_keyboard_players++;
        }
    } else {
        // Get next available slot
        var control_index = find_next_control(input_slots);
        if control_index &gt;= 0 {
            input_slots[control_index] = keyboard_input;
            gui_id = input_selectors[control_index];
            gui_id.color = global.color_array[control_index];
            gui_id.is_keyboard = true;
        }
    }
}


var gp_num = gamepad_get_device_count();
for (gp_id = 0; gp_id &lt; gp_num; gp_id++) {
    if gamepad_is_connected(gp_id) {
        if gamepad_button_check_pressed(gp_id , gp_start) {
            // Check if we have added this controller already
            var control_index = is_control_in_list(input_slots, gp_id) 
            if control_index &gt;= 0 {
                // Set as ready
                var gui_id = input_selectors[control_index];
                if !gui_id.is_ready {
                    gui_id.is_ready = true;
                    global.num_gamepad_players++;
                }
            } else {
                // Get next available slot
                var control_index = find_next_control(input_slots);
                if control_index &gt;= 0 {
                    input_slots[control_index] = gp_id;
                    gui_id = input_selectors[control_index];
                    gui_id.color = global.color_array[control_index];
                    gui_id.is_gamepad = true;
                    gui_id.gamepad_id = gp_id;
                }  
            }
        } else if gamepad_button_check_pressed(gp_id , gp_select) {
            // Find gamepad in array
            for (control_index = 0; 
                control_index &lt; array_length_1d(input_slots);  control_index++) {
                if (input_slots[control_index] == gp_id &amp;&amp; 
                    !input_selectors[control_index].is_ready) {
                    input_slots[control_index] = empty_input;
                    gui_id = input_selectors[control_index];
                    gui_id.is_gamepad = false;
                }
            }
        }
    }
}

// Check for back buttons
if (keyboard_check_pressed(vk_backspace) || keyboard_check_pressed(vk_escape)) {
    // Check which slot is the keyboard
    for (control_index = 0; control_index &lt; array_length_1d(input_slots); 
         control_index++) {
        if (input_slots[control_index] == keyboard_input &amp;&amp; 
            !input_selectors[control_index].is_ready) {
            input_slots[control_index] = empty_input;
            var gui_id = input_selectors[control_index];
            gui_id.is_keyboard = false;
        }
    }
}

var start_game = true;
var is_one_ready = false;
for (input_index = 0; input_index &lt; array_length_1d(input_slots); input_index++) {
    if input_slots[input_index] != empty_input {
        if !input_selectors[input_index].is_ready {
            start_game = false;
            break;
        } else {
            is_one_ready = true;
        }
    }   
}
if is_one_ready &amp;&amp; start_game {
    if (room_exists(room_next(room))) {
        room_goto(room_next(room));
    }
}
